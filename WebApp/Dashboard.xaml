<Window x:Class="WebApp.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApp"
        mc:Ignorable="d"
        Title="Dashboard" 
        Height="450" 
        Width="800" 
        HorizontalAlignment="Center">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0.843"/>
            <GradientStop Color="#FF6C1010" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Height="450" Width="800">
        <Grid.Background >
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF6C1010" Offset="1"/>
                <GradientStop Color="Black" Offset="0.6"/>

            </LinearGradientBrush>
        </Grid.Background>
        <Grid Background="#FF6A6C70"  Margin="28,21,159,159">
            <ScrollBar HorizontalAlignment="Right"/>

        </Grid>
        <Grid Background="#FF7E746C" Margin="28,312,159,36"/>
        <Button Name ="Rent" Width="90" Height="30" Margin="675,133,35,271" Content="Rent" Click="Click_Button_Rent" FontWeight="Bold">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1D9B34"/>
                    <GradientStop Color="#FF15AE48" Offset="0.525"/>
                    <GradientStop Color="#FFF7F7F7" Offset="0.255"/>
                    <GradientStop Color="#FF1CF71C" Offset="0.847"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Name ="Add" Width="90" Height="30" Margin="675,51,35,353" Content="Add" Click="Click_Button_Add" FontWeight="Bold" Foreground="Black" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1D9B34"/>
                    <GradientStop Color="#FF15AE48" Offset="0.525"/>
                    <GradientStop Color="#FFF7F7F7" Offset="0.255"/>
                    <GradientStop Color="#FF1CF71C" Offset="0.847"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Name ="Remove" Width="90" Height="30" Margin="675,340,35,64" Content="Remove" Click="Click_Button_Remove" FontWeight="Bold" Foreground="#FF060505" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1D9B34"/>
                    <GradientStop Color="#FF15AE48" Offset="0.525"/>
                    <GradientStop Color="#FFF7F7F7" Offset="0.255"/>
                    <GradientStop Color="#FF1CF71C" Offset="0.847"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Name ="Close" Width="90" Height="30" Margin="675,217,35,187" Content="Close" Click="Click_Button_Close" FontWeight="Bold" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1D9B34"/>
                    <GradientStop Color="#FF15AE48" Offset="0.525"/>
                    <GradientStop Color="#FFF7F7F7" Offset="0.255"/>
                    <GradientStop Color="#FF1CF71C" Offset="0.847"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
