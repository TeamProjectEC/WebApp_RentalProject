<Window x:Class="WebApp.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApp"
        mc:Ignorable="d"
        Title="Welcome" 
        Height="450"
        Width="800"
        Background="#252222" 
        HorizontalAlignment="Center">
    <Grid>
        <!--left_pnl_nav-->
        <Grid Name ="nav_pnl" HorizontalAlignment="Left"  Width="70">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7E1C1C" Offset="1"/>
                    <GradientStop Color="#FF3C0505" Offset="0.808"/>
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel Name="stk_pnl">
                <Grid Height="80" >
                    <StackPanel Orientation="Horizontal" Grid.Column="0" >
                        <Button Name="Home" Height="40" Width="68" Content="Home" Foreground="White" Click="Button_Click_Home" >
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="#FF4D1717" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid Height="80">
                    <StackPanel Orientation="Horizontal" Grid.Column="0" >
                        <Button Name="Dashboard" Height="40" Width="68" Content="Dashboard" Foreground="White" Click="Button_Click_Dashboar">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="#FF4D1717" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid Height="80">
                    <StackPanel Orientation="Horizontal" Grid.Column="0" >
                        <Button Name ="Log_Out" Height="40" Width="68" Content="Log Out" Foreground="White" Click="Button_Click_Log_Out" BorderBrush="Black">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="#FF4D1717" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Grid>
        <Grid Margin="72,0,0,0">
            <!--back_ground-->
            <Grid Margin="0,0,0,0">
                <ScrollViewer Grid.Row="1" BorderBrush="Black">

                    <ScrollViewer.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF171313" Offset="0.471"/>
                        </LinearGradientBrush>

                    </ScrollViewer.Background>

                    <StackPanel>
                        <!--header_logo-->
                        <Grid Name="nav_logo"  VerticalAlignment="Top" Height="100"  Margin="0,0,0,0" >
                            <Grid.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="Black" Offset="1"/>
                                </LinearGradientBrush>
                            </Grid.Background>
                            <Image Source="images/text_logo.png" Height="80" Width="250" HorizontalAlignment="Center" />
                            <Image Source="images/logo.png" Height="100" Width="120" HorizontalAlignment="Left" Margin="0,5,0,5"/>
                        </Grid>
                        <!--img_background-->
                        <Image Source="images/background_logo.png"/>

                        <!--header_menu-->
                        <Grid Name="header" Height="700" Margin="15,-30,15,0"  Background="#FF2E2B2B">

                            <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#FF2E2B2B" BorderBrush="#FF2E2B2B">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="3" Columns="3"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <Image Source="films_img\alita.jpg" Width="710" Height="787"/>
                                <Image Source="films_img\bloodshot.jpg" Width="710" Height="787"/>
                                <Image Source="films_img\come_play.jpg" Width="710" Height="790"/>
                                <Image Source="films_img\extraction.jpg" Width="710" Height="787"/>
                                <Image Source="films_img\greenland.jpg" Width="715" Height="787"/>
                                <Image Source="films_img\harry_potter.jpg" Width="710" Height="787"/>
                                <Image Source="films_img\old_guard.jpg" Width="710" Height="787"/>
                                <Image Source="films_img\de_gaulle.jpg" Width="680" Height="787"/>
                                <Image Source="films_img\days.jpg" Width="710" Height="787"/>
                            </ListBox>
                        </Grid>
                        <!--body-->
                        <Grid Name="movieGrid" Background="#FF2E2B2B" Margin="15,25,15,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                    <RowDefinition Height="350" />
                                </Grid.RowDefinitions>

                            </Grid>


                        </Grid>
                        <!--botten_nav-->
                        <Grid Height="130" Margin="15,15,15,0" Background="Black">
                            <Image Source="images/logo.png" Height="130" Width="150" HorizontalAlignment="Right" Margin="0,5,0,5"/>
                        </Grid>
                    </StackPanel>

                </ScrollViewer>

            </Grid>

        </Grid>

    </Grid>


</Window>
