<Window x:Class="WebApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        Background="#252222">

    <Grid>
        <Grid>
            <Grid x:Name ="nav_pnl" HorizontalAlignment="Right"  Width="70" Background="#1A1818">
                <StackPanel x:Name="stk_pnl">
                    <Grid Height="80" >
                        <StackPanel Orientation="Horizontal" Grid.Column="0" >
                            <Button x:Name="Home" Height="40" Width="68" Content="Home" Background="#1A1818" Foreground="White" Click="Button_Click_Home" />
                        </StackPanel>
                    </Grid>
                    <Grid Height="80">
                        <StackPanel Orientation="Horizontal" Grid.Column="0" >
                            <Button x:Name="Login" Height="40" Width="68" Content="Loggin in" Background="#1A1818" Foreground="White" Click="Button_Click_Login"/>
                        </StackPanel>
                    </Grid>
                    <Grid Height="80">
                        <StackPanel Orientation="Horizontal" Grid.Column="0" >
                            <Button x:Name="Register" Height="40" Width="68" Content="Register" Background="#1A1818" Foreground="White" Click="Button_Click_Register"/>
                        </StackPanel>
                    </Grid>
                    <Grid Height="80">
                        <StackPanel Orientation="Horizontal" Grid.Column="0" >
                            <Button x:Name="About" Height="40" Width="68" Content="About" Background="#1A1818" Foreground="White" Click="Button_Click_About"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>

        </Grid>
    </Grid>
</Window>
